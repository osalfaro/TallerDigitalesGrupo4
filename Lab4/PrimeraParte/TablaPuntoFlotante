module TablaPuntoFlotante(
input logic [3:0] opcion, //Entrada de los switch
output logic [31:0] A,B
);

always_comb
    case(opcion) //Se escogeran el par de numeros A y B que seran los operandos de la suma
        0: begin A=32'b01000000111111000000000000000000; B=32'b00111110010000000000000000000000; end
        1: begin A=32'b11000001110101010101010101010101; B=32'b11100000100000000000000011111111; end
        2: begin A=32'b00000101010000000000001111111111; B=32'b00000010011111000001111100000111; end
        3: begin A=32'b11010101011111000000000000000000; B=32'b11010100010000000000000000000000; end
        4: begin A=32'b00000011100000001111000011111111; B=32'b00000010111100000000111100000000; end
        5: begin A=32'b11111111111111111100000011111100; B=32'b11010101000000000011111100000011; end
        6: begin A=32'b00000101010101111000010101111000; B=32'b00000011111111111000000001111111; end
        7: begin A=32'b11111100000000001010000010100000; B=32'b11111000011111111111111111111111; end
        8: begin A=32'b01010101000000001111111111111111; B=32'b00101010100000000000111111111111; end
        9: begin A=32'b11110001011111110000101001011111; B=32'b10100101000011111111110000110000; end
        default: begin A=32'b11110001011111110000101001011111; B=32'b10100101000011111111110000110000; end
        
    endcase
endmodule
