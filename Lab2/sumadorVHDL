--Sumador de 1 bit.

entity SumadorC1Bit is
port(a,b,cin:in STD_LOGIC;
        cout, d: out STD_LOGIC);
end;

architecture Structural of SumadorC1Bit is

begin
process(all)
    begin
    cout <= (a and b) or (cin and (a xor b));
    d <= cin xor (a xor b);


end process;
end Structural;


--Sumador Completo 4 bits (En proceso)
entity SumadorC4Bits is
    port(A,B: in STD_LOGIC_VECTOR (3 downto 0);
        Ci:in STD_LOGIC;
        D:out STD_LOGIC_VECTOR (3 downto 0);
        Co:out STD_LOGIC);
end;

architecture Structural of SumadorC4Bits is

component SumadorC1Bit is
    port(a,b,cin:in STD_LOGIC;
        cout, d: out STD_LOGIC);
end component;

signal C: STD_LOGIC_VECTOR (3 downto 0);

begin
Sumador1 : SumadorC1Bit port map (A(0), B(0), Ci, C(1), D(0));
Sumador2 : SumadorC1Bit port map (A(1), B(1), C(1), C(1), D(1));
Sumador3 : SumadorC1Bit port map (A(2), B(2), C(2), C(1), D(2));
Sumador4 : SumadorC1Bit port map (A(3), B(3), C(3), CO, D(3));

end Structural;

